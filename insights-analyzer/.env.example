# Seinsight AI - Environment Configuration Example

# Backend API Configuration
BACKEND_API_URL=http://localhost:3000

# Twitter API Configuration (OAuth 1.0a - REQUIRED for TwitterCollector)
# Get these from https://developer.twitter.com/en/portal/projects-and-apps
# Make sure your app has "Read and write" permissions enabled
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET_KEY=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Twitter Plugin Configuration (Read-only mode for data collection)
TWITTER_DRY_RUN=false              # Set to true for testing without API calls
TWITTER_ENABLE_POST=false          # Disable posting (we only read data)
TWITTER_ENABLE_REPLIES=false       # Disable replies (read-only mode)
TWITTER_ENABLE_ACTIONS=false       # Disable timeline actions (read-only mode)
TWITTER_ENABLE_DISCOVERY=false     # Disable discovery service (read-only mode)

# Twitter Search Configuration
TWITTER_SEARCH_INTERVAL=15         # Search every 15 minutes
TWITTER_MAX_RESULTS_PER_SEARCH=50  # Maximum results per search
TWITTER_INCLUDE_REPLIES=true       # Include replies in search results
TWITTER_INCLUDE_RETWEETS=false     # Focus on original content
TWITTER_LANGUAGE=en                # English content only
TWITTER_RESULT_TYPE=recent         # Get recent tweets

# Apify Configuration (for InstagramAnalyzer)
APIFY_API_TOKEN=your_apify_token_here

# AI Providers Configuration (for all agents)
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Google Generative AI
GOOGLE_GENERATIVE_AI_API_KEY=your_google_genai_key_here

# Optional: Ollama (local AI)
OLLAMA_API_ENDPOINT=http://localhost:11434

# Platform Plugins (optional)
DISCORD_API_TOKEN=your_discord_token_here
TELEGRAM_BOT_TOKEN=your_telegram_token_here

# Bootstrap Plugin Configuration
IGNORE_BOOTSTRAP=false             # Keep bootstrap plugin enabled

# Development Configuration
NODE_ENV=development
DEBUG=eliza:*
LOG_LEVEL=info